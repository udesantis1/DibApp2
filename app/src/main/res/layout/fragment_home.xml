<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="150dp"
        android:orientation="vertical"
        android:layout_alignParentLeft="true">

        <Button
            android:id="@+id/buttonScanQR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:baselineAligned="false"
            android:paddingTop="15dp"
            android:text="Start Lesson" />

        <Button
            android:id="@+id/buttonSchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:paddingTop="15dp"
            android:text="Show schedule" />

        <Button
            android:id="@+id/buttonOldClasses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:paddingTop="15dp"
            android:text="Past Lessons" />

        <Button
            android:id="@+id/buttonCreateLesson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:paddingTop="15dp"
            android:text="Create Lesson" />

        <Button
            android:id="@+id/btn_copy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:paddingTop="15dp"
            android:text="Copy the code for the QR" />

        <TextView
            android:id="@+id/QRID_txt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="147dp"
            android:textAlignment="center" />


    </LinearLayout>

</RelativeLayout>